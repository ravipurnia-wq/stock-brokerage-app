# Production Environment Variables for Stock Brokerage Application
# Copy this file to .env.production and update with your production values

# Database Configuration
MONGODB_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGODB_USERNAME=admin
MONGODB_PASSWORD=your_secure_mongodb_app_password_here

# Redis Configuration  
REDIS_PASSWORD=your_secure_redis_password_here

# PayPal Configuration (PRODUCTION)
PAYPAL_CLIENT_ID=your_production_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_production_paypal_client_secret_here
PAYPAL_MODE=live
PAYPAL_SUCCESS_URL=https://yourdomain.com/payment-success
PAYPAL_CANCEL_URL=https://yourdomain.com/payment-cancelled

# Finnhub API Configuration
FINNHUB_API_TOKEN=your_finnhub_api_token_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long

# Application Configuration
LOGGING_LEVEL_COM_STOCKBROKERAGE=INFO

# SSL Configuration (if using HTTPS)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/yourdomain.crt
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/yourdomain.key

# Domain Configuration
DOMAIN_NAME=yourdomain.com